<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.govishal.vishalsingh.parivartan2k15.EighthActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rules and Regulations"
        android:textSize="25dp"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#0d0b06" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Reporting time for all the competitions is 9.30 a.m. A student can participate in maximum two items. Every Participant must bring their College ID card with them, without ID card he/she will not be allowed to participate. Creativity, presentation and imaginative expression of ideas will be the deciding factors for the judgment. Outstanding Individual and Couple dance performances can also be considered for guest item by screening committee on provision of video recordings. Attractive Cash prizes will be awarded to winners."
        android:id="@+id/textView8"
        android:textSize="12dp"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />



    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/Sweetu"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
